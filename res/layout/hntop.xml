<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/hnTop" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="60dip"
	android:background="#FF6600">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/linearLayout1"
		android:orientation="horizontal">
		<TextView android:id="@+id/hnTopTitle" android:text="Hacker News"
			android:textStyle="bold" android:gravity="center_vertical"
			android:layout_height="wrap_content" android:paddingLeft="10dip"
			android:paddingTop="10dip" android:layout_width="wrap_content"></TextView>
		<TextView android:id="@+id/hnUserKarma" android:text=""
			android:textStyle="bold" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingRight="10dip"
			android:paddingTop="10dip" android:gravity="center_vertical|right"></TextView>
	</LinearLayout>
	<TextView android:paddingLeft="10dip" android:text="News"
		android:ellipsize="end" android:layout_width="fill_parent"
		android:singleLine="true" android:paddingBottom="10dip"
		android:layout_height="wrap_content" android:id="@+id/hnTopDesc"></TextView>
</LinearLayout>

