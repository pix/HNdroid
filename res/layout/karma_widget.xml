<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:gravity="center_vertical"
	android:padding="10sp" android:clickable="true"
	android:background="@drawable/rounded_border" android:layout_margin="10sp">

	<TextView android:id="@+id/title" android:layout_height="wrap_content"
		android:text="YC" android:layout_alignParentRight="true"
		android:textSize="13dip" android:layout_centerHorizontal="true"
		android:gravity="center_vertical|center_horizontal"
		android:layout_width="fill_parent" />
		
	<TextView android:id="@+id/username" android:layout_below="@+id/title"
		android:layout_height="wrap_content" android:text="username"
		android:layout_alignParentRight="true" android:textSize="9dip"
		android:layout_centerHorizontal="true" android:gravity="center_vertical|center_horizontal"
		android:layout_width="fill_parent" />

	<TextView android:id="@+id/karma" android:layout_height="wrap_content"
		android:text="0" android:layout_below="@+id/username"
		android:textSize="18dip" android:textStyle="bold"
		android:layout_centerHorizontal="true" android:gravity="center_vertical|center_horizontal"
		android:layout_width="fill_parent" />


</RelativeLayout>