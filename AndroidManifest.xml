<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.gluegadget.hndroid" android:versionCode="3" android:versionName="0.4.1">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.Light.NoTitleBar" android:name="Application">
		<activity android:label="@string/app_name"
			android:configChanges="orientation" android:name=".activities.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:label="@string/menu_comments"
			android:configChanges="orientation" android:name=".activities.CommentsActivity">
		</activity>
		<activity android:name=".widget.KarmaWidgetConfigurationActivity">
			<intent-filter>
				<action android:name="android.apwidget.action.APPWIDGET_CONFIGURE"/>
			</intent-filter>
		</activity>
		<activity android:label="HN Preferences" android:name=".activities.PreferenceActivity"/>
		<receiver android:label="HN Karma" android:name=".widget.KarmaWidget">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@xml/karma_widget"
			/>
		</receiver>
		<service android:name=".widget.KarmaWidget$UpdateService"/>
	</application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-sdk android:minSdkVersion="4"></uses-sdk>
</manifest> 